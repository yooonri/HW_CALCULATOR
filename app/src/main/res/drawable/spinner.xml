<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Цвет фона при нажатии -->
            <corners android:radius="5dp" /> <!-- Сглаживание углов при нажатии -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Обычный цвет фона -->
            <corners android:radius="5dp" /> <!-- Обычное сглаживание углов -->
        </shape>
    </item>
</selector>